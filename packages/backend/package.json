{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prettier": "@acme/prettier-config",
  "exports": {
    "./api": {
      "types": "./convex/_generated/api.d.ts",
      "default": "./convex/_generated/api.ts"
    },
    "./server": {
      "types": "./convex/_generated/server.d.ts",
      "default": "./convex/_generated/server.ts"
    },
    "./dataModel": {
      "types": "./convex/_generated/dataModel.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "convex dev",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "echo 'NO TEST SUITE CONFIGURED'",
    "format": "prettier --check . --ignore-path ../../.prettierignore",
    "format:fix": "prettier --write . --ignore-path ../../.prettierignore",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "git clean -xdf dist node_modules .cache",
    "init": "convex dev --until-success"
  },
  "dependencies": {
    "convex": "catalog:"
  },
  "devDependencies": {
    "@acme/eslint-config": "workspace:*",
    "@acme/prettier-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "typescript": "catalog:"
  }
}
