{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.18",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*",
      "scripts/"
    ],
    "catalog": {
      "@types/bun": "^1.2.18",
      "@types/node": "^22.13.4",
      "convex": "^1.25.0",
      "zod": "^4.0.5",
      "eslint": "^9.31.0",
      "typescript": "^5.8.3"
    },
    "catalogs": {
      "react18": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1"
      },
      "react19": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0"
      }
    }
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@acme/web...",
    "dev:native": "turbo run dev --filter=@acme/native...",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:ws": "bunx sherif@latest",
    "lint:ws:fix": "bunx sherif@latest --fix",
    "clean": "bun scripts/clean",
    "clean:root": "git clean -xdf dist node_modules .cache .turbo",
    "clean:ws": "turbo run clean",
    "ci": "turbo run typecheck test format lint lint:ws"
  },
  "devDependencies": {
    "turbo": "^2.5.5"
  }
}
