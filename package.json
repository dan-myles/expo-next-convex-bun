{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/monorepo",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.2.18",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*",
      "scripts/"
    ],
    "catalog": {
      "@types/bun": "^1.2.18",
      "@types/node": "^22.13.4",
      "convex": "^1.25.0",
      "zod": "^4.0.5",
      "eslint": "^9.31.0",
      "typescript": "^5.8.3"
    },
    "catalogs": {
      "react18": {
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1"
      },
      "react19": {
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.0"
      }
    }
  },
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "format": "bun run --filter '*' format",
    "format:fix": "bun run --filter '*' format:fix",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "lint:ws": "bunx sherif@latest",
    "lint:ws:fix": "bunx sherif@latest --fix",
    "clean": "git clean -xdf dist node_modules cache && bun run --filter '*' clean"
  },
  "devDependencies": {
    "turbo": "^2.5.5"
  }
}
