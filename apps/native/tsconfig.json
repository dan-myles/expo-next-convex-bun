{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "target": "ESNext",
    "moduleDetection": "force",
    "customConditions": ["react-native"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
